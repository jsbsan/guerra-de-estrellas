Public Sub RadioButtonPlanetaRelleno_Click()

    If RadioButtonPlanetaRelleno.value = True Then
        FMain.modorellenoplaneta = "relleno"
    Else
        FMain.modorellenoplaneta = "simple"
    Endif

End

Public Sub RadioButtonPlanetaAlambre_Click()

    If RadioButtonPlanetaRelleno.value = True Then
        FMain.modorellenoplaneta = "simple"
    Else
        FMain.modorellenoplaneta = "relleno"
    Endif

End

Public Sub RadioButtonExploSi_Click()

    If RadioButtonExploSi.value = True Then
        FMain.controlexplosiones = True
    Else
        FMain.controlexplosiones = False
    Endif

End

Public Sub Form_Open()
    'rejilla valor de separaciones

    ValueBoxRejilla.value = FMain.valor_rejilla

    'explosiones (si/no)
    If FMain.controlexplosiones = True Then
        RadioButtonExploNO.value = False
        RadioButtonExploSi.value = True
    Else
        RadioButtonExploNO.value = True
        RadioButtonExploSi.value = False

    Endif

    'rellono de planetas
    If FMain.modorellenoplaneta = "simple" Then
        RadioButtonPlanetaRelleno.value = False
        RadioButtonPlanetaAlambre.value = True
    Else
        RadioButtonPlanetaRelleno.value = True
        RadioButtonPlanetaAlambre.value = False
    Endif

    'fondo
    If FMain.fondo = User.home & "/guerraestrellas/imagenes/FondoEstrellas.jpg" Then
        RadioButtonFondonormal.value = False
        RadioButtonFondoEstrellas.value = True
        FMain.Activada_Rejilla = False
    Else
        RadioButtonFondonormal.value = True
        RadioButtonFondoEstrellas.value = False

    Endif

End

Public Sub RadioButtonExploNO_Click()

    If RadioButtonExploNO.value = True Then
        FMain.controlexplosiones = False
