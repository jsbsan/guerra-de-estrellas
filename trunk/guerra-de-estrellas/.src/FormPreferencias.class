Public Sub ValueBoxRejilla_KeyPress()

    If Key.code = Key.Enter Or Key.code = Key.Return Then
        FMain.valor_rejilla = ValueBoxRejilla.value
    Endif

End

Public Sub ToolButtonCancelar_Click()

